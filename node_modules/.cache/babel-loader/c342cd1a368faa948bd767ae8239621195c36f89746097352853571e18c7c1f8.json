{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { login } from \"@/api/user\";\nexport default {\n  data() {\n    return {\n      username: \"\",\n      password: \"\"\n    };\n  },\n  methods: {\n    async handleLogin() {\n      try {\n        const response = await login(this.username, this.password);\n        if (response.data == 0) {\n          alert(\"登录成功！\");\n          // 保存用户信息，跳转到首页\n          localStorage.setItem(\"user\", JSON.stringify(response.data));\n          this.$router.push(\"/\");\n        } else {\n          alert(\"登录失败：用户名或密码错误\");\n        }\n      } catch (error) {\n        alert(\"登录失败：\" + error.message);\n      }\n    }\n  }\n};","map":{"version":3,"names":["login","data","username","password","methods","handleLogin","response","alert","localStorage","setItem","JSON","stringify","$router","push","error","message"],"sources":["src/views/Login.vue"],"sourcesContent":["<!-- src/views/Login.vue -->\n<template>\n  <div class=\"login\">\n    <h2>用户登录</h2>\n    <form @submit.prevent=\"handleLogin\">\n      <div>\n        <label for=\"username\">用户名：</label>\n        <input type=\"text\" v-model=\"username\" required />\n      </div>\n      <div>\n        <label for=\"password\">密码：</label>\n        <input type=\"password\" v-model=\"password\" required />\n      </div>\n      <button type=\"submit\">登录</button>\n    </form>\n  </div>\n</template>\n\n<script>\nimport { login } from \"@/api/user\";\n\nexport default {\n  data() {\n    return {\n      username: \"\",\n      password: \"\",\n    };\n  },\n  methods: {\n    async handleLogin() {\n      try {\n        const response = await login(this.username, this.password);\n        if (response.data == 0) {\n        alert(\"登录成功！\");\n        // 保存用户信息，跳转到首页\n        localStorage.setItem(\"user\", JSON.stringify(response.data));\n        this.$router.push(\"/\");\n        } else {\n          alert(\"登录失败：用户名或密码错误\");\n        }\n      } catch (error) {\n        alert(\"登录